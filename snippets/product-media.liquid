{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | image_url: width:300 }}" alt="{{ media.preview_image.alt }}" class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform">
        
    {% when 'external_video' %}
        {{ media |  external_video_tag: class:  'w-full h-80 object-cover transition duration-1000 ease-in-out hover:scale-105 transform' }}

    {% when 'video' %}
        {{ media |  video_tag: controls: true, class: 'w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform' }}
    
    {% when 'model' %}
        {{ media |  model_viewer_tag }}
    
    
    {% else %}
    {{ media |  media_tag }}
        
{% endcase %}